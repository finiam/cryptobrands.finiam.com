    "vanilla-lazyload": "^17.3.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@snowpack/plugin-postcss": "^1.1.0",
    "@snowpack/plugin-run-script": "^2.3.0",
    "autoprefixer": "^10.2.1",
    "cssnano": "^4.1.10",
    "glob": "^7.1.6",
    "hasha": "^5.2.2",
    "netlify-plugin-cache": "^1.0.3",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "sharp": "^0.27.0",
    "snowpack": "^3.0.11",
    "subfont": "^5.2.5",
    "tailwindcss": "^2.0.2"
  }
